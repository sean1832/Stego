<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Stego.UI.Controls.SteganographyLsbControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Stego.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="4">
        <TextBlock Text="Hidden Bit Per Byte"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border 
                Grid.Column="0"
                x:Name="CellEight" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="1"
                x:Name="CellSeven" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="2"
                x:Name="CellSix" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="3"
                x:Name="CellFive" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="4"
                x:Name="CellFour" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="5"
                x:Name="CellThree" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="6"
                x:Name="CellTwo" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
            <Border 
                Grid.Column="7"
                x:Name="CellOne" 
                Background="{StaticResource SubtleFillColorSecondaryBrush}" 
                Height="20" Width="20"
                CornerRadius="8"/>
        </Grid>

        <Slider
            x:Name="LsbCountSlider"
            HorizontalAlignment="Stretch"
            Minimum="1"
            Maximum="8"/>
    </StackPanel>
</UserControl>
